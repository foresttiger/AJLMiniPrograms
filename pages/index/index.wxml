<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button class='userinfoBtn' wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">安居乐装修计算器</button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <!-- <text class="userinfo-nickname">{{userInfo.nickName}}</text> -->
    </block>
  </view>
  <!-- <text>报价计算器</text> -->
  <view class='form'>
    <view class='line'>
      <label>小区名</label><input class='input' value="{{inputTxt}}" bindinput="cellnameInput" placeholder='小区名' type='text' name="cellname"></input>
    </view>
    <view class='line'>
      <label>地址</label><input class='input' value="{{inputTxt}}" bindinput="addressInput" type='text' placeholder='小区所在地址' name="address"></input>
    </view>
    <view class='line'>
      <label>户型</label><input class='input' value="{{inputTxt}}" bindinput="componentsInput" type='text'placeholder='您的户型' name="components"></input>
    </view>
    <view class='line'>
      <label>面积</label><input class='input' value="{{inputTxt}}" bindinput="areaInput" type='text' placeholder='建筑面积'  name="area"></input>
    </view>
    <view class='line'>
      <label>风格</label><input class='input' value="{{inputTxt}}" bindinput="styleInput" type='text'placeholder='喜欢的装修风格'  name="style"></input>
    </view>
    <view class='line'>
      <label>预算</label><input class='input' value="{{inputTxt}}" bindinput="budgetInput" type='text'placeholder='装修预算多少？'  name="budget"></input>
    </view>
   <view class='line'>
      <label>类型</label><input class='input' value="{{inputTxt}}" bindinput="typeInput" type='text' placeholder='半包、全包？' name="type"></input>
    </view>
      <view class='line'>
      <label>联系人</label><input class='input' value="{{inputTxt}}" bindinput="nameInput"  type='text'placeholder='您的姓名' name="name"></input>
    </view>
    <view class='line'>
      <label>手机号</label><input class='input' value="{{inputTxt}}" bindinput="mobilephoneInput"  type='text'placeholder='您的手机号码' name="mobilephone"></input>
    </view>
    <button bindtap="getQuote" class='btn'>立即获取报价</button>
    <!-- <textarea name="other">
    </textarea> -->
  </view>
</view>
